generator client {
  provider        = "prisma-client-js"
  // 1. ADICIONE ESTA LINHA para habilitar a feature
  previewFeatures = ["postgresqlExtensions"] 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // A LINHA 'extensions' FOI REMOVIDA
}

// Modelo para as fotos/momentos
model Moment {
  id        String   @id @default(cuid())
  title     String?
  imageUrl  String
  createdAt DateTime @default(now())

  // Relacionamento com o usu치rio
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// --- Modelos necess치rios para o NextAuth.js ---
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  moments       Moment[] // O usu치rio pode ter v치rios momentos
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}